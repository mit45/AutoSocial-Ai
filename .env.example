# Copy this file to .env and fill the values. Do NOT commit real secrets.

# OpenAI
OPENAI_API_KEY=

# Instagram
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_USER_ID=

# App & Uploads
BASE_URL=https://example.com
UPLOAD_BASE_URL=https://example.com/uploads/ig
UPLOAD_API_URL=
UPLOAD_API_KEY=

# FTP (optional, if you use FTP upload fallback)
FTP_HOST=
FTP_USER=
FTP_PASSWORD=

# Cloudflare R2 (optional)
# If set, generated images will be uploaded to R2 instead of FTP.
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
# Optional public base URL (e.g. https://cdn.umittopuz.com/ig) to construct public image URLs
R2_PUBLIC_BASE_URL=

# Database (default: local sqlite)
DATABASE_URL=sqlite:///./autosocial.db

